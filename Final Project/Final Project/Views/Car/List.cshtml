@model IEnumerable<Final_Project.Models.View.CarViewModel>

@{
    ViewBag.Title = "List";
}
<div>
    <div class="col-lg-12">

        <h2>Car List</h2>

    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            
            <img src="https://cdn3.lostateminor.com/wp-content/uploads/2011/03/cool-car-design-2.jpg" class="img-rounded" alt="Cinque Terre" width="304" >

        </div>
        <div class="col-sm-8">
            <p>
                @Html.ActionLink("Add Car", "Create", new { userId = ViewBag.UserId })
            </p>

            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Model)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastCheckUp)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NextCheckup)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastCheckUp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NextCheckup)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { userId = item.UserId }) |
                    @Html.ActionLink("Details", "Details", new { userId = item.UserId }) |
                    @Html.ActionLink("Delete", "Delete", new { userId = item.UserId })
                </td>
            </tr>
}

            </table>

        </div>
    </div>
</div>